{% extends 'base.html.twig' %}

{% block body %}
    <div class="container" style="margin-top: 30px">
        <table id="products" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <th>Name</th>
            <th>Price</th>
            <th>AliexpressId</th>
            <th>Image</th>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.aliexpressId }}</td>
                    <td>
                        <img src="{{ product.image }}" style="height: 100px; width: 100px">
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#products').DataTable();
        } );
    </script>
{% endblock %}
